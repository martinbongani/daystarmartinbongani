        a(href='/views/liveFeed.html') Live Feed
      button#logoutBtn Logout
main
  h2 Accounting Entry Form
  // Transaction Entry Form
  form#transaction-form
    label(for='description') Description:
    input#description(type='text' name='description')
    label(for='amount') Amount (UGX):
    input#amount(type='number' name='amount')
    label(for='type') Type:
    select#type
      option(value='expense') Expense
      option(value='income') Income
    label(for='date') Date:
    input#date(type='date' name='date')
    button(type='submit') Add Transaction
  // Transaction History Table
  h3 Transaction History
  table#transaction-table
    thead
      tr
        th Description
        th Amount (UGX)
        th Type
        th Date
        th Running Balance (UGX)
    tbody#history-body
