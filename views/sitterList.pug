doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Sitter List
  link(rel='stylesheet' href='/css/style.css')
  link(rel='stylesheet' href='/css/bootstrap/css/bootstrap.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  link(rel='stylesheet' href='/css/sitterReport.css')
include navbar
header
  include userNav
main
  .container-fluid
    h3 Registered Sitters
    table.table.table-striped
      thead
        tr
          th Sitter Name
          th Sitter Number
          th Address
          th Date of Birth
          th Gender
          th Phone 
          th Email
          th Next of Kin
          th Status
          th Check-in
          th Update
          th Delete
      tbody#sitterTableBody
        each sitter in sitters
          tr
            td #{sitter.sitterName}
            td #{sitter.sitterNumber}
            td #{sitter.address}
            td #{sitter.dob}
            td #{sitter.gender}
            td #{sitter.contact}
            td #{sitter.email}
            td #{sitter.nextOfKin+'-'+ sitter.nextOfKinContact}
            td #{sitter.status}
            td 
              a.btn.btn-secondary(href='/checkInSitter/'+sitter._id) Check-in
            td
              a.btn.btn-success(href='sittersUpdate/'+sitter._id) Update
            td  
              form(action='/deleted' method='POST')
                  input(type='hidden' name='id' value=sitter._id)
                  button.btn.btn-danger(type='submit') Delete
include footer
script(src='/js/sitterReport.js')
script(src='/css/bootstrap/js/bootstrap.bundle.js')
