doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Sitters Off
  link(rel='stylesheet' href='/css/style.css')
  link(rel='stylesheet' href='/css/bootstrap/css/bootstrap.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  //- link(rel='stylesheet' href='/css/babyStatus.css')
include navbar
header
  include userNav
main
  .container-fluid
    h3 Sitters Checked-out
    table.table.table-striped
      thead
        tr
          th Sitter Name
          th Sitter Number
          th Address
          th Departure Time 
          th Status 
          th Action
      tbody#sitterTableBody
        if sitters.length 
          each sitter in sitters
            if sitter.status === 'Off'
              tr
                td #{sitter.sitterName}
                td #{sitter.sitterNumber}
                td #{sitter.address}
                td #{sitter.departureTime}
                td #{sitter.status}
                td
                  a.btn.btn-secondary(href='/checkInSitter/'+sitter._id) Check-in
include footer
script(src='/css/bootstrap/js/bootstrap.bundle.js')
