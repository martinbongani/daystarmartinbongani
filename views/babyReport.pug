doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title DayStar Baby Report
  link(rel='stylesheet' href='/css/style.css')
  link(rel='stylesheet' href='/css/bootstrap/css/bootstrap.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  link(rel='stylesheet' href='/css/babyReport.css')
include navbar
.container-shop
header
  nav.dash
    ul
      li
        a(href='/admin') Dashboard
      li
        a(href='/adminRegistration') Admin Registration
      li
        a(href='/babyRegistration') Register Baby
      li
        a(href='/sitterRegistration') Register Sitter
      li
        a(href='/babyStatus') Baby Status
      li
        a(href='/babyReport') Baby Report
      li
        a(href='/sittterReport') Sitter Report
      li
        a(href='/accounts') Accounts
      li
        a(href='/inventory') Inventory
      li
        a(href='/liveFeed') Live Feed
      button#logoutBtn Logout
main
  .container-babyReportAdmin
    h2.h2-babyReportAdmin DayStar Baby Report
    form#reportFormBabyAdmin.form-babyReportAdmin
      label.label-babyReportAdmin(for='fromDateBabyReportAdmin') From:
      input#fromDateBabyReportAdmin.input-babyReportAdmin(type='date' name='fromDateBabyReportAdmin')
      label.label-babyReportAdmin(for='toDateBabyReportAdmin') To:
      input#toDateBabyReportAdmin.input-babyReportAdmin(type='date' name='toDateBabyReportAdmin')
      button.button-babyReportAdmin(type='submit')
        | Generate Report
      button#exportButtonBabyReportAdmin.button-babyReportAdmin(type='button')
        | Export Report
    table#enrollmentTableBabyReportAdmin.table-babyReportAdmin
      thead.thead-babyReportAdmin
        tr.tr-babyReportAdmin
          th.th-babyReportAdmin Full Name
          th.th-babyReportAdmin Baby Number
          th.th-babyReportAdmin Status
          th.th-babyReportAdmin Sitter
      tbody#enrollmentListBabyReportAdmin.enrollmentList-babyReportAdmin
include footer
script(src='https://cdn.jsdelivr.net/npm/chart.js')
script(src='/js/babyReport.js')
script(src='/css/bootstrap/js/bootstrap.bundle.js')
script(src='/js/add.js')
