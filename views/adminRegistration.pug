doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Admin Registration
  link(rel='stylesheet' href='/css/style.css')
  link(rel='stylesheet' href='/css/bootstrap/css/bootstrap.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  link(rel='stylesheet' href='/css/adminRegistration.css')
div(w3-include-html='/views/navbar.html')
.container-shop
header
  nav.dash
    ul
      li
        a(href='/views/admin.html') Dashboard
      li
        a(href='/views/adminRegistration.html') Admin Registration
      li
        a(href='/views/babyRegistration.html') Register Baby
      li
        a(href='/views/sitterRegistration.html') Register Sitter
      li
        a(href='/views/babyStatus.html') Baby Status
      li
        a(href='/views/babyReport.html') Baby Report
      li
        a(href='/views/sittterReport.html') Sitter Report
      li
        a(href='/views/accounts.html') Accounts
      li
        a(href='/views/inventory.html') Inventory
      li
        a(href='/views/liveFeed.html') Live Feed
      button#logoutBtn Logout
main
  .form-container
    h2.h2-adminReg Admin Registration
    form#registrationForm(onsubmit='return validateForm()' action='/registerAdmin' method='POST')
      .input-group
        label(for='firstName') First Name:
        input#firstName(type='text' name='firstName')
        span#firstNameError.error
      .input-group
        label(for='lastName') Last Name:
        input#lastName(type='text' name='lastName')
        span#lastNameError.error
      .input-group
        label(for='email') Email:
        input#email(type='email' name='email')
        span#emailError.error
      .input-group
        label(for='password') Password:
        input#password(type='password' name='password')
        span#passwordError.error
      .input-group
        input(type='text' placeholder='Role' value='Admin' name='role')
      button.btn-adminReg(type='submit') Register
      p#successMessage.success(style='display: none')
        | Registration successful!
div(w3-include-html='/footer.html')
script(src='https://cdn.jsdelivr.net/npm/chart.js')
script(src='/css/bootstrap/js/bootstrap.bundle.js')
