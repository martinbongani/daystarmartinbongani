doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Baby Registration Form
  link(rel='stylesheet' href='/css/style.css')
  link(rel='stylesheet' href='/css/bootstrap/css/bootstrap.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  link(rel='stylesheet' href='/css/babyRegistration.css')
include navbar
.container-shop
header
  nav.dash
    ul
      li
        a(href='/admin.html') Dashboard
      li
        a(href='/adminRegistration.html') Admin Registration
      li
        a(href='/babyRegistration.html') Register Baby
      li
        a(href='/sitterRegistration.html') Register Sitter
      li
        a(href='/babyStatus.html') Baby Status
      li
        a(href='/babyReport.html') Baby Report
      li
        a(href='/sittterReport.html') Sitter Report
      li
        a(href='/accounts.html') Accounts
      li
        a(href='/inventory.html') Inventory
      li
        a(href='/liveFeed.html') Live Feed
      button#logoutBtn Logout
main
  .container-babyReg
    h2.h2-babyReg DayStar Baby Registration Form
    form#registrationForm(action='/registerBaby' method='POST')
      .form-row
        div(style='flex-basis: 48%')
          label(for='firstName') First Name:
          input#firstName(type='text' name='firstName')
        div(style='flex-basis: 48%')
          label(for='lastName') Last Name:
          input#lastName(type='text' name='lastName')
      .form-row
        div(style='flex-basis: 48%')
          label(for='dob') Date of Birth:
          input#dob(type='date' name='dob')
        div(style='flex-basis: 48%')
          label(for='gender') Gender:
          select#gender(name='gender')
            option(value='') Select
            option(value='male') Male
            option(value='female') Female
      label(for='address') Address:
      input#address(type='text' name='address' rows='1')
      .form-row
        div(style='flex-basis: 48%')
          label(for='fatherName') Father&apos;s Name:
          input#fatherName(type='text' name='fatherName')
        div(style='flex-basis: 48%')
          label &nbsp;
          input#fatherDeceased(type='checkbox' name='fatherDeceased' onchange='toggleFatherName(this)')
          label(for='fatherDeceased') Father Deceased
      .form-row
        div(style='flex-basis: 48%')
          label(for='fatherEmail') Father&apos;s Email:
          input#fatherEmail(type='email' name='fatherEmail')
        div(style='flex-basis: 48%')
          label(for='fatherContact') Father's Contact
          input#fatherContact(type='text' name='fatherContact')
      label(for='fatherOccupation') Father's Occupation:
      input#fatherOccupation(type='text' name='fatherOccupation' rows='1')
      .form-row
        div(style='flex-basis: 48%')
          label(for='motherName') Mother&apos;s Name:
          input#motherName(type='text' name='motherName')
        div(style='flex-basis: 48%')
          label &nbsp;
          input#motherDeceased(type='checkbox' name='motherDeceased' onchange='toggleMotherName(this)')
          label(for='motherDeceased') Mother Deceased
      .form-row
        div(style='flex-basis: 48%')
          label(for='motherEmail') Mother&apos;s Email:
          input#motherEmail(type='email' name='motherEmail')
        div(style='flex-basis: 48%')
          label(for='motherContact') Mother's Contact
          input#motherContact(type='text' name='motherContact')
      label(for='motherOccupation') Mother's Occupation:
      input#motherOccupation(type='text' name='motherOccupation' rows='1')
      label(for='babyNumber') Baby Number:
      input#babyNumber(type='text' name='babyNumber' rows='1')
      .form-group
        label Who has parental responsibility?
        .form-check
          input#father.form-check-input(type='radio' name='parentResponsibility' value='father' checked='')
          label.form-check-label(for='father') Father
        .form-check
          input#mother.form-check-input(type='radio' name='parentResponsibility' value='mother')
          label.form-check-label(for='mother') Mother
        .form-check
          input#father.form-check-input(type='radio' name='parentResponsibility' value='both')
          label.form-check-label(for='both') Both
        .form-check
          input#mother.form-check-input(type='radio' name='parentResponsibility' value='other')
          label.form-check-label(for='others') Others
      #guardianField.form-row.hidden
        div(style='flex-basis: 100%')
          label(for='guardianName') Guardian&apos;s Name:
          input#guardianName(type='text' name='guardianName')
      button.btn-babyReg(type='submit' onclick='registerBaby()')
        | Register Baby
  #popup-babyReg.popup-babyReg
    p#registrationMessage
    button(onclick='closePopup()') OK
include footer
script(src='https://cdn.jsdelivr.net/npm/chart.js')
script(src='/css/bootstrap/js/bootstrap.bundle.js')
